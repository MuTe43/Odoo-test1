<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="test_act1" model="ir.actions.act_window">
        <field name="name">properties</field>
        <field name="res_model">estate.property.test</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="list_test1" model="ir.ui.view">
        <field name="name">list.test1</field>
        <field name="model">estate.property.test</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>


    <record id="search_test1" model="ir.ui.view">
        <field name="name">search.test1</field>
        <field name="model">estate.property.test</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="available" name="state" domain="['|',('state','=','NEW'),('state','=','OFFER RECEIVED')]"/>
                <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
            </search>
        </field>
    </record>


    <record id="form_test1" model="ir.ui.view">
        <field name="name">form.test1</field>
        <field name="model">estate.property.test</field>
        <field name="arch" type="xml">
            <form string="Test" edit="False">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <div style="margin-bottom:10px;">
                    <field name="tag_ids" widget="many2many_tags" string="" />
                    </div>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            <field name="description"/>
                            </group>
                            <group>
                            <field name="bedrooms"/>
                            </group>
                            <group>
                            <field name="living_area"/>
                            </group>
                            <group>
                            <field name="facades"/>
                            </group>
                            <group>
                            <field name="garage"/>
                            </group>
                            <group>
                            <field name="garden"/>
                            </group>
                            <group>
                            <field name="garden_area"/>
                            </group>
                            <group>
                            <field name="garden_orientation"/>
                            </group>
                            <group>
                            <field name="state"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                            <field name="salesperson"/>
                            </group>
                            <group>
                            <field name="buyer"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                            <field name="offer_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>